<DEFINITION>
	<FOR>tampering</FOR>
	<TABLE>0.02 0.98</TABLE>
</DEFINITION>

<DEFINITION>
	<FOR>fire</FOR>
	<TABLE>0.01 0.99</TABLE>
</DEFINITION>

<DEFINITION>
	<FOR>alarm</FOR>
